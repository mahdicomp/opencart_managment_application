{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="pull-right">
               <a onclick="$('#form').attr('action', '{{delete}}'); $('#form').attr('target', '_self'); $('#form').submit();"  data-toggle="tooltip" title="{{text_delete}}" class="btn btn-primary">{{text_delete}}</a>
        </div>
      <h1>{{ text_Messages }}</h1>
    
    </div>
  </div>
  <div class="container-fluid">

    <div class="panel panel-default">
      <div class="panel-heading">
      
      </div>
      <div class="panel-body">
       <form action="" method="post" enctype="multipart/form-data" id="form">
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
        <thead>
          <tr>
           <td width="1" style="text-align: center;"><input type="checkbox" onclick="$('input[name*=\'selected\']').attr('checked', this.checked);" /></td>
            <td class="left">
              {{ text_ID }}
               </td>
            
            <td class="left">{{ text_Subject }}
                </td>
            
             <td class="left">{{ text_Short_text }}</td>
            
            <td class="left">
               {{ text_Date_added }}
                </td>
              
          </tr>
        </thead>
        <tbody>
          
         {% if notifications %}
         {% for notification in notifications %}
          <tr>
           
            <td style="text-align: center;">
                {% if (notification.selected) %}
                    <input type="checkbox" name="selected[]" value="{{notification.notification_id}}" checked="checked" />
                {% else %}
                    <input type="checkbox" name="selected[]" value="{{notification.notification_id}}" />
                {% endif %}
            </td>
            <td class="left">{{notification.notification_id}}</td>
            <td class="left">{{notification.title}}</td>
            <td class="left">{{notification.message}}</td>
            <td class="left">{{notification.date_added}}</td>
         
          {% endfor %}
                {% else %}
                <tr>
                  <td class="text-center" colspan="8">{{ text_No_content }}</td>
                </tr>
                {% endif %}
        </tbody>
      </table>
         </div>
        </form>
      <div class="pagination">{{pagination}}</div>
    </div>
  </div>
</div>



{{footer}}